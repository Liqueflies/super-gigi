.DocumentationSection__title
  h3.Typo_h3 Example 3 - Change the grid base

.DocumentationSection__html
  pre.CodeExampleBox
    code.language-markup.
      &lt;div class=&quot;Steak&quot;&gt;
        &lt;div class=&quot;Steak__element Steak__element--first&quot;&gt;
          &lt;div class=&quot;Box&quot;&gt;
            &lt;p&gt;1&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
        &lt;div class=&quot;Steak__element Steak__element--second&quot;&gt;
          &lt;div class=&quot;Box&quot;&gt;
            &lt;p&gt;2&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
      &lt;/div&gt;

.DocumentationSection__scss
  pre.CodeExampleBox
    code.language-scss.
      .Steak {
        @include grid-row(false);

        &__element {
          &--first {
            @include grid-column($width: 1 of 5);
            @include media-query(large) {
              @include grid-column($width: 3 of 5);
            }
          }

          &--second {
            @include grid-column($width: 4 of 5);
            @include media-query(large) {
              @include grid-column($width: 2 of 5);
            }
          }
        }
      }

