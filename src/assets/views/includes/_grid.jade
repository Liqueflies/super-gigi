// - THE GRID

.DocumentationSection__title
  h3.Typo_h3 Example 1 - Simple grid
  .DocumentationSection__docReference
    a.DocumentationSection__docLink(href="https://github.com/Objectway/super-gigi#grid-row" target="_blank") grid-row()

.DocumentationSection__html
  pre.CodeExampleBox
    code.language-markup.
      &lt;div class=&quot;RoastedRibs&quot;&gt;
        &lt;div class=&quot;RoastedRibs__element RoastedRibs__element--first&quot;&gt;
          &lt;div class=&quot;Box&quot;&gt;
            &lt;p&gt;1&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
        &lt;div class=&quot;RoastedRibs__element RoastedRibs__element--second&quot;&gt;
          &lt;div class=&quot;Box&quot;&gt;
            &lt;p&gt;2&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
      &lt;/div&gt;

.DocumentationSection__scss
  pre.CodeExampleBox
    code.language-scss.
      .RoastedRibs{
        @include grid-row($nested: false) // Equivalent to grid-row(false);

        &__element {
          &--first {
            @include grid-column((xxsmall: 12, medium: 4, large: 6));
          }

          &--second {
            @include grid-column((xxsmall: 12, medium: 8, large: 6));
          }
        }
      }

