// - THE GRID

.Example__title
  h3 Example 1
.Example__html
  pre
    code.language-markup.
      &lt;div class=&quot;Example1&quot;&gt;
        &lt;div class=&quot;Example1__element Example1__element--first&quot;&gt;
          &lt;div class=&quot;Box&quot;&gt;
            &lt;p&gt;1&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
        &lt;div class=&quot;Example1__element Example1__element--second&quot;&gt;
          &lt;div class=&quot;Box&quot;&gt;
            &lt;p&gt;2&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
      &lt;/div&gt;
.Example__scss
  pre
    code.language-scss.
      .Example1{
        @include grid-row(false)
        &__element {
          &--first {
            +grid-column((xxsmall: 12, medium: 4, large: 6))
          }
          &--second{
            +grid-column((xxsmall: 12, medium: 8, large: 6))
          }
        }
      }

.Example__content
  .Example1

    .Example1__element.Example1__element--first
      .Box
        p 1

    .Example1__element.Example1__element--second
      .Box
        p 2

